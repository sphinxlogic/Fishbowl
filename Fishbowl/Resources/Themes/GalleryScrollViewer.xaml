                                   Height="1"
                                   Margin="4,-4,4,0"
                                   Fill="#FF454545" />
                        <Rectangle StrokeThickness="0"
                                   Height="1"
                                   Margin="4,-5,4,0"
                                   Fill="#FF636363" />
                        <Rectangle StrokeThickness="0"
                                   Height="1"
                                   Margin="4,10,4,0"
                                   Fill="#FF454545" />
                        <Rectangle StrokeThickness="0"
                                   Height="1"
                                   Margin="4,9,4,0"
                                   Fill="#FF636363" />
                        <Rectangle StrokeThickness="0"
                                   Height="1"
                                   Margin="4,4,4,0"
                                   Fill="#FF454545" />
                        <Rectangle StrokeThickness="0"
                                   Height="1"
