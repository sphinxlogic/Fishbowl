<UserControl x:Class="FacebookClient.StartupPrompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="100" Width="300">
    <Border Background="{DynamicResource ApplicationBarBackground}" BorderBrush="{StaticResource ApplicationBarBorderBrush}" BorderThickness="4" Padding="10">
        <StackPanel>
            <TextBlock Text="Would you like to enable automatic background updates?" TextWrapping="Wrap" FontSize="18"/>           
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Yes" Click="YesClick" Padding="5,0" Margin="5"/>
                <Button Content="No" Click="NoClick" Padding="5,0" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
