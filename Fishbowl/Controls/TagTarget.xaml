<UserControl x:Class="FacebookClient.Controls.TagTarget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="TranslateTransform" X="0" Y="0"/>
    </UserControl.RenderTransform>
    <Grid>
        <Rectangle x:Name="NWRect" Fill="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="10" Height="10" Margin="0" StrokeThickness="0"/>
        <Rectangle x:Name="NERect" Fill="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="10" Height="10" StrokeThickness="0" Margin="0"/>
        <Rectangle x:Name="SWRect" Fill="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="10" Height="10" StrokeThickness="0" Margin="0"/>
        <Rectangle x:Name="SERect" Fill="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="10" Height="10" StrokeThickness="0" Margin="0"/>
        <Border x:Name="TagTargetBorder" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" BorderThickness="3"/>
    </Grid>
</UserControl>
