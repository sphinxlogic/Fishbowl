<EffectControls:EffectExpander
    EffectName="Bulge and Pinch"
    x:Class="EffectControls.BulgeAndPinchControl"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:EffectControls="clr-namespace:EffectControls"
    >

    <Expander.Content>
        <StackPanel Margin="0,5,0,5">


            <Border BorderThickness="1" BorderBrush="Black" >
                <Border BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>

                        <TextBlock Foreground="White" FontSize="15" FontFamily="Century Gothic" Text="Radii"/>

                                <Slider>
                                </Slider>

                            </StackPanel>
                </Border>
            </Border>



            <Border BorderThickness="1" BorderBrush="Black" >
                <Border BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>

                        <TextBlock Foreground="White" FontSize="15" FontFamily="Century Gothic" Text="BulgeMultiplier" />

                                <Slider>
                                </Slider>

                            </StackPanel>
                </Border>
            </Border>


        </StackPanel>

    </Expander.Content>

</EffectControls:EffectExpander>
